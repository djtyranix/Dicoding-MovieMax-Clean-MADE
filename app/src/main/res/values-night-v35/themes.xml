<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MovieMax" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="colorPrimary">@color/lightblue_200</item>
        <item name="colorPrimaryVariant">@color/lightblue_700</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightblue_500</item>
        <item name="colorSecondaryVariant">@color/blue_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <item name="android:statusBarColor">?attr/toolbar_gradient_color_left</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Customize your theme here. -->
        <item name="cardview_bg">@color/bg_dark</item>
        <item name="text_color_primary">@color/text_dark</item>
        <item name="toolbar_gradient_color_left">@color/bg_darkest</item>
        <item name="toolbar_gradient_color_right">@color/bg_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="home_primary_color">@color/bg_darkest</item>
        <item name="love_color">#FFFF313B</item>
        <item name="home_love_color">@color/lightblue_500</item>
    </style>
</resources>