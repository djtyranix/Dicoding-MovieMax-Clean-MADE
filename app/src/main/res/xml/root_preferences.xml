<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/language_header">

        <Preference
            app:key="select_language"
            app:summary="@string/language_change_desc"
            app:title="@string/language_option" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme">

        <ListPreference
            app:entries="@array/theme_list"
            app:entryValues="@array/theme_list_values"
            app:key="mode_switch"
            app:summary="%s"
            app:defaultValue="system"
            app:title="@string/mode_switch" />
    </PreferenceCategory>
</PreferenceScreen>